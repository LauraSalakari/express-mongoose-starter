<form method="POST" action="/todo/{{todo._id}}/edit"> 
    <h2>Edit Todo</h2>
    <div class="form-group">
        <label for="todoName">Todo:</label>
        <input name="name" type="text" class="form-control" id="todoName" value="{{todo.name}}">
    </div>
    <div class="form-group">
        <label for="todoDescription">Description:</label>
        <input name="description" type="text" class="form-control" id="todoDescription" value="{{todo.description}}">
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>